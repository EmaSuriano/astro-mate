---
import Icon from "astro-icon";
import ScrollIcon from "../components/ScrollIcon.astro";
import TextLoop from "../components/TextLoop.astro";
import Triangle from "../components/Triangle.astro";
import type { Config } from "../types";

type Props = Pick<Config, "name" | "roles" | "social">;

const { name, roles, social } = Astro.props;

const words = roles.sort(() => Math.random());
---

<section class="relative hero min-h-screen" id="home">
  <Triangle
    className="bg-accent w-[95vw] h-[35vh] md:w-[60vw] md:h-[80vh]"
    position="top-left"
  />
  <Triangle
    className="bg-secondary w-[50vw] h-[38vh] md:w-[35vw] md:h-[80vh]"
    position="top-left"
  />
  <Triangle
    className="bg-primary w-[75vw] h-[25vh] md:w-[60vw] md:h-[35vh]"
    position="top-right"
  />
  <Triangle className="bg-accent w-[100vw] h-[20vh]" position="bottom-right" />

  <div class="hero-content text-center text-primary z-10">
    <div class="max-w-md flex flex-col space-y-8">
      <h1 class="text-5xl font-bold">Hello, I'm {name}!</h1>
      <h2 class="text-4xl font-bold">
        <TextLoop words={words} />
      </h2>
      <div class="flex justify-center gap-4">
        {
          social.map((link) => (
            <div class="tooltip tooltip-bottom" data-tip={link.label}>
              <a
                class="btn btn-link btn-primary btn-circle"
                href={link.href}
                aria-label={link.label}
              >
                <Icon name={link.icon} class="w-10 h-10" />
              </a>
            </div>
          ))
        }
      </div>
    </div>

    <div class="absolute bottom-0 inset-x-0 mb-14">
      <ScrollIcon href="#about" />
    </div>
  </div>
</section>
