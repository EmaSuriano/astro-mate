---
import Article from "../components/Article.astro";
import Title from "../components/Title.astro";
import Wave from "../components/Wave.astro";

const aboutMeHref =
  "https://gist.githubusercontent.com/EmaSuriano/b078b59e13bdbee9fd19926291687550/raw/81e472bba4999eb3b3656f17d3e3d370dcb79b41/mate-about.md";

const aboutMe = await fetch(aboutMeHref).then((res) => res.text());

const avatar = "https://placeimg.com/192/192/people";
---

<section class="hero min-h-screen bg-base-200 relative" id="about">
  <Wave position="bottom" fill="fill-base-300" />

  <div class="hero-content flex-col lg:flex-row gap-10 max-w-screen-xl">
    <div class="flex flex-col gap-8">
      <Title href="#about" label="About me ðŸ™‹â€â™‚ï¸" />
      <Article content={aboutMe} />
    </div>

    <div class="avatar w-80 m-10">
      <img
        class="transition-all rounded-full ring-primary hover:ring hover:ring-offset-4 hover:scale-105"
        src={avatar}
      />
    </div>
  </div>
</section>
