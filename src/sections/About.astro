---
import Article from "../components/Article.astro";
import Title from "../components/Title.astro";
import Wave from "../components/Wave.astro";
import type { Config } from "../types";

type Props = Pick<Config, "aboutMe" | "avatar">;

const { aboutMe, avatar } = Astro.props as Props;

const content = await fetch(aboutMe).then((res) => res.text());
---

<Wave direction="bottom" fill="fill-base-200" />

<section class="hero min-h-screen bg-base-200 relative" id="about">
  <div class="hero-content flex-col lg:flex-row m-4 max-w-screen-xl z-10">
    <div class="flex flex-col gap-8">
      <Title href="#about" label="About me 🙋‍♂️" />
      <Article content={content} />
    </div>

    <div class="avatar w-72 m-10">
      <img
        class="transition-all rounded-full ring-primary hover:ring hover:ring-offset-4 hover:scale-105"
        src={avatar}
        alt="Avatar"
      />
    </div>
  </div>
</section>
