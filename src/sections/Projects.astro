---
import Title from "../components/Title.astro";
import Project from "../components/Project.astro";
import Wave from "../components/Wave.astro";
import type { Config } from "../types";

type Props = Pick<Config, "projects">;

const { projects } = Astro.props as Props;
---

<Wave direction="bottom" fill="fill-base-300" />

<section class="hero min-h-screen bg-base-300 relative" id="projects">
  <div class="hero-content max-w-screen-xl m-4 z-10">
    <div class="flex flex-col gap-8">
      <Title href="#project" label="Projects ðŸ’»" />

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-4 lg:gap-8"
      >
        {projects.map((project) => <Project {...project} />)}
      </div>
    </div>
  </div>
</section>
