---
import Title from "../components/Title.astro";
import Wave from "../components/Wave.astro";

const posts = await Astro.glob("../blog/*.md");
---

<section class="relative hero min-h-screen bg-base-200" id="writing">
  <Wave position="bottom" fill="fill-secondary" />

  <div class="hero-content max-w-screen-xl">
    <div class="flex flex-col gap-8">
      <Title href="#writing" label="Writing ✍️" />

      <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 gap-4">
        {posts.map((post) => (
          <div class="card card-compact bg-base-100 shadow-xl transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-10 duration-200">
            <div class="card-body">
              <h2 class="card-title">{post.frontmatter.title}</h2>
              <p>{post.frontmatter.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
