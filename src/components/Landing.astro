];
const socialLinks = [
  {
    label: "Twitter",
    href: "https://twitter.com/emasuriano",
    icon: "twitter-line",
  },
  {
    label: "Github",
    href: "https://github.com/EmaSuriano/astro-mate",
    icon: "github-line",
  },
];
const deterministic = false;

const words = roles.sort(() => (deterministic ? 1 : Math.random()));
---

<section class="hero min-h-screen bg-base-100 relative" id="home">
  <div class="hero-content text-center z-10">
    <div class="max-w-md flex flex-col space-y-8">
      <h1 class="text-5xl font-bold ">Hello, I'm {name}!</h1>
      <h2 class="text-4xl font-bold ">
        <TextLoop words={words} />
      </h2>
      <div class="flex space-x-4 justify-center">
        {socialLinks.map((link) => (
          <div class="tooltip tooltip-bottom" data-tip={link.label}>
            <a class="btn btn-link btn-circle" href={link.href}>
              <Icon pack="ri" name={link.icon} class="w-10 h-10" />
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 inset-x-0 z-10 mb-14">
    <ScrollIcon href="#about" />
