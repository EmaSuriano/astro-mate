      <h2 class="text-4xl font-bold ">
        <TextLoop words={words} />
      </h2>
      <div class="flex space-x-4 justify-center">
        {socialLinks.map((link) => (
          <div class="tooltip tooltip-bottom" data-tip={link.label}>
            <a class="btn btn-link btn-circle" href={link.href}>
              <Icon pack="ri" name={link.icon} class="w-10 h-10" />
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 inset-x-0 z-10 mb-14">
    <ScrollIcon href="#about" />
