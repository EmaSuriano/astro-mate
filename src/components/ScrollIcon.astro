---
type Props = {
  href: string;
};

const { href } = Astro.props as Props;
---

<a href={href} aria-label="Scroll to content" class="icon-scroll text-primary"
></a>

<style>
  .icon-scroll,
  .icon-scroll:before {
    position: absolute;
    left: 50%;
  }

  .icon-scroll {
    width: 40px;
    height: 70px;
    margin-left: -20px;
    top: 50%;
    margin-top: -35px;
    box-shadow: inset 0 0 0 2px black;
    border-radius: 25px;
  }

  .icon-scroll:before {
    content: "";
    width: 6px;
    height: 6px;
    background: black;
    margin-left: -4px;
    top: 15px;
    border-radius: 4px;
    animation: scroll 1.5s cubic-bezier(0.65, -0.55, 0.25, 1.5) infinite;
  }

  @keyframes scroll {
    0%,
    20% {
      transform: translateY(0) scaleY(1);
    }

    10% {
      opacity: 1;
    }

    100% {
      transform: translateY(36px) scaleY(2);
      opacity: 0.01;
    }
  }
</style>
