---
import Icon from "astro-icon";
import { Image } from "@astrojs/image/components";

const posts = await Astro.glob("../blog/*.md");
---

<section class="hero min-h-screen bg-base-200" id="projects">
  <div class="hero-content z-10">
    <div class="flex flex-col">
      <h1 class="text-4xl mb-8">Writing ✍️</h1>

      <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 gap-4">
        {posts.concat([...posts, ...posts, ...posts]).map((post) => (
          <div class="card card-compact bg-base-100 shadow-xl transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-10 duration-200">
            <div class="card-body">
              <h2 class="card-title">{post.frontmatter.title}</h2>
              <p>{post.frontmatter.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

